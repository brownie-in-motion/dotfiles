# screenshots
"maim -su | xclip -selection clipboard -t image/png"
    c:107

"upload-screenshot"
    control + c:107

"DISPLAY=:0 record-screen"
    control + shift + c:107

# volume
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# brightness--use multimedia because brightness doesn't work

"brightness - 100"
    XF86AudioPrev

"brightness + 100"
    XF86AudioNext
